{
    "buildCommand": "npm run vercel-build",
    "installCommand": "pnpm install --no-frozen-lockfile",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/scanner_ocr/:path*",
            "destination": "/scanner_ocr/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}